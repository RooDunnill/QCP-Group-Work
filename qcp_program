oracle_values = [1000,100,10,1]

def phase_oracle(qub, oracle_values):          #the Grover phase oracle
    flip = np.ones(qub.dim)
    for i in oracle_values:
        flip[i] = flip[i] - 2
    for j, vals in enumerate(flip):
        qub.vector[j] = qub.vector[j] * vals        
    return qub

def top_probs(prob_list, n):
    top_n = np.array([], dtype=prob_list.dtype)
    temp_lst = prob_list.copy()  
    for _ in range(n):
        max_value = np.max(temp_lst)
        top_n = np.append(top_n, max_value)
        temp_lst = np.delete(temp_lst, np.argmax(temp_lst))
    result = []
    used_count = {} 
    for i, num in enumerate(prob_list):
        if num in top_n and used_count.get(num, 0) < np.count_nonzero(top_n == num):
            result.append((i, num))
            used_count[num] = used_count.get(num, 0) + 1
    return np.array(result, dtype=object)

q00 = q0 @ q0 
q01 = q0 @ q1


def grover_alg(oracle_values, **kwargs):     #Grovers algorithm, can input the number of qubits and also a custom amount of iterations
    console.rule(f"Grovers search with oracle values: {oracle_values}", style="headers")
    n_cap = int(kwargs.get("qubit_cap",10))
    n = kwargs.get("n", None)
    iterations = kwargs.get("iterations", None)
    spec_had_mat = np.array([1,1,1,-1])
    spec_had = Gate(name="Custom Hadamard for Grovers", info=qc_dat.Hadamard_info, matrix=spec_had_mat)
    if n == None:
        print_array(f"Using up to {n_cap} Qubits to run the search")
        if iterations == None:
            max_oracle = max(oracle_values)
            n_qubit_min = 1
            search_space = 2
            while max_oracle > 2**n_qubit_min:
                n_qubit_min += 1
            n_qubit_range = np.arange(n_qubit_min, n_cap + 1, dtype=int)
            int_val = 0
            for i in n_qubit_range:
                search_space = 2**i
                
                op_iter = ((np.pi/4)*np.sqrt((search_space)/len(oracle_values)) - 0.5)
                int_dist = op_iter - np.floor((np.pi/4)*np.sqrt((search_space)/len(oracle_values)) - 0.5)
                int_dist = abs(int_dist-0.5)
                print_array(f"Optimal iterations for {i} Qubits is: {op_iter:.3f}")
                if int_dist > int_val:
                    n = i
                    int_val = int_dist
            search_space: int = 2**n
            print_array("\n")
            print_array(f"Using {n} Qubits with a search space of {search_space} to get the best accuracy")
        else:
            raise QC_error(qc_dat.error_iterations)
    else:
        search_space = 2**n
        print_array(f"Using {n} Qubits and a search space of {search_space}")
    op_iter = round((np.pi/4)*np.sqrt((search_space)/len(oracle_values)) - 0.5)

    if iterations == None:
        iterations = op_iter
        if iterations < 1:
            iterations = 1.0000
        print_array(f"Optimal number of iterations are: {iterations}")
    else:
        print_array(f"Number of iterations to perform are: {iterations}")
    qub = q0
    had_op = spec_had
    had_norm = 1/np.sqrt(2**n)
    for i in range(n-1):
        qub **= q0
        had_op **= spec_had
    it = 0
    while it < int(iterations):
        if it != 0:
            qub = final_state
        initialized_qubit = had_op * qub
        intermidary_qubit = had_op * phase_oracle(initialized_qubit, oracle_values)
        intermidary_qubit.vector *= -1
        intermidary_qubit.vector[0] *= -1
        final_state = had_op * intermidary_qubit
        it += 1
        print(f"\rIteration number: {it} ", end="")    #allows to clear line without writing a custom print function in print_array
    print_array("\n")
    final_state.vector *= had_norm**(3*int(iterations))
    final_state = final_state.prob_dist()
    sorted_arr = top_probs(final_state.matrix, len(oracle_values))
    output = Grover(final_state.name, oracle_values, n, sorted_arr)
    output.name = f"The States of the Grover Search with Oracle Values {oracle_values}, after {int(iterations)} iterations is: "
    print_array(output)
    console.rule(f"", style="headers")
    return output
